{
  "compilerOptions": {
    "target": "es2017",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost"
    ],
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "sourceMap": true,

    "outDir": "dist",

    "allowSyntheticDefaultImports": true,

    "noEmitHelpers": true,
    "importHelpers": true

  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
